<UserControl x:Name="uc"
             x:Class="WpfApp1.Pages.TestPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="sp">
    <Grid.ColumnDefinitions>
      <ColumnDefinition x:Name="gd1"
                        Width="2*" />
      <ColumnDefinition x:Name="gd2"
                        Width="1*" />
      
    </Grid.ColumnDefinitions>
    
      <TextBlock VerticalAlignment="Center" Grid.Column="0" Text="{Binding ElementName=sp, Path=ActualWidth}"></TextBlock>
    <TextBlock Grid.Column="1" Text="{Binding ElementName=gd2, Path=ActualWidth}"></TextBlock>
  </Grid>
</UserControl>
  