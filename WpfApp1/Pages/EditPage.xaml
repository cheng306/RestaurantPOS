<UserControl x:Name="editPage"
             x:Class="WpfApp1.Pages.EditPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApp1.Pages"
             xmlns:converter="clr-namespace:WpfApp1.Converters"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300"
             MinWidth="800">
  <UserControl.Resources>
    <converter:MultiplierConverter x:Key="Multiplier" />
  </UserControl.Resources>
  <StackPanel x:Name="stackpanel">

    
    <ListView x:Name="itemsListView"
              Height="{Binding ElementName=stackpanel, Path=ActualHeight, Converter={StaticResource Multiplier}, ConverterParameter=0.8}">
      <ListView.View>
        <GridView>
          <GridViewColumn Width="{Binding ElementName=itemsListView, Path=ActualWidth, Converter={StaticResource Multiplier}, ConverterParameter=0.2}"
                          DisplayMemberBinding="{Binding Name}">
            <GridViewColumn.Header>
              <GridViewColumnHeader x:Name="nameHeader"
                                    Click="GridViewColumnHeader_Click">
                Name
              </GridViewColumnHeader>
            </GridViewColumn.Header>
          </GridViewColumn>
          <GridViewColumn Width="{Binding ElementName=itemsListView, Path=ActualWidth, Converter={StaticResource Multiplier}, ConverterParameter=0.2}"
                          DisplayMemberBinding="{Binding Category}">
            <GridViewColumn.Header>
              <GridViewColumnHeader x:Name="categoryHeader"
                                    Click="GridViewColumnHeader_Click">
                Category
              </GridViewColumnHeader>
            </GridViewColumn.Header>
          </GridViewColumn>
          <GridViewColumn Width="{Binding ElementName=itemsListView, Path=ActualWidth, Converter={StaticResource Multiplier}, ConverterParameter=0.2}"
                          DisplayMemberBinding="{Binding Price}">
            <GridViewColumn.Header>
              <GridViewColumnHeader x:Name="priceHeader"
                                    Click="GridViewColumnHeader_Click">
                Price
              </GridViewColumnHeader>
            </GridViewColumn.Header>
          </GridViewColumn>
          <GridViewColumn Width="{Binding ElementName=itemsListView, Path=ActualWidth, Converter={StaticResource Multiplier}, ConverterParameter=0.2}"
                          DisplayMemberBinding="{Binding AddTime}">
            <GridViewColumn.Header>
              <GridViewColumnHeader x:Name="addTimeHeader"
                                    Click="GridViewColumnHeader_Click">
                Added Time
              </GridViewColumnHeader>

            </GridViewColumn.Header>

          </GridViewColumn>
        </GridView>
      </ListView.View>
    </ListView>

    <WrapPanel VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Height="{Binding ElementName=stackpanel, Path=ActualHeight, Converter={StaticResource Multiplier}, ConverterParameter=0.1}">
      <Button x:Name="AddButton"
              Margin="10">
        Add
      </Button>
      <Button x:Name="DeleteButton"
              Margin="10"
              Click="DeleteButton_Click">
        Remove
      </Button>


    </WrapPanel>

  </StackPanel>

</UserControl>
